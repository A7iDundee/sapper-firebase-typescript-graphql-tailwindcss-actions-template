{
	"name": "sapper-firebase-typescript-graphql-tailwindcss-actions-template",
	"description": "A template that includes Svelte with Sapper, Firebase functions and hosting, TypeScript and TypeGraphQL, Tailwind CSS, ESLint and EditorConfig, and automatic building and deployment with GitHub Actions",
	"version": "2019.10.20",
	"scripts": {
		"dev:sapper": "node ./node_modules/sapper/dist/cli.js dev",
		"prebuild:sapper": "rimraf - functions/__sapper__/build && mkdirp functions/__sapper__/build",
		"build:sapper": "node ./node_modules/sapper/dist/cli.js build",
		"postbuild:sapper": "ncp ./__sapper__/build ./functions/__sapper__/build",
		"export": "node ./node_modules/sapper/dist/cli.js export",
		"prestart": "npm run build",
		"start": "./node_modules/.bin/firebase serve",
		"watch:tailwind": "cross-env NODE_ENV=development node ./node_modules/postcss-cli/bin/postcss src/tailwind.postcss -o static/main.css -w",
		"build:tailwind": "cross-env NODE_ENV=production node ./node_modules/postcss-cli/bin/postcss src/tailwind.postcss -o static/main.css",
		"build": "concurrently \"npm run build:tailwind\" \"npm run build:sapper\"",
		"dev": "concurrently \"npm:dev:sapper\" \"npm:watch:tailwind\"",
		"predeploy": "npm run build",
		"deploy": "node ./node_modules/.bin/firebase deploy"
	},
	"dependencies": {
		"@types/node-fetch": "^2.5.2",
		"compression": "^1.7.1",
		"express": "^4.17.1",
		"node-fetch": "^2.6.0",
		"sirv": "^0.4.0"
	},
	"devDependencies": {
		"@babel/core": "^7.6.4",
		"@babel/plugin-syntax-dynamic-import": "^7.0.0",
		"@babel/plugin-transform-runtime": "^7.6.2",
		"@babel/preset-env": "^7.6.3",
		"@babel/runtime": "^7.6.3",
		"@fullhuman/postcss-purgecss": "^1.3.0",
		"@pyoner/svelte-ts-preprocess": "^1.2.1",
		"@pyoner/svelte-types": "^3.4.4-2",
		"@types/express": "^4.17.1",
		"@types/graphql": "^14.5.0",
		"@typescript-eslint/eslint-plugin": "^2.4.0",
		"@typescript-eslint/parser": "^2.4.0",
		"apollo-server-express": "^2.9.4",
		"bufferutil": "^4.0.1",
		"concurrently": "^4.1.2",
		"connect": "^3.7.0",
		"cross-env": "^6.0.3",
		"cssnano": "^4.1.10",
		"eslint": "^6.5.1",
		"firebase-tools": "^7.6.1",
		"graphql": "^14.2.1",
		"mkdirp": "^0.5.1",
		"ncp": "^2.0.0",
		"postcss-cli": "^6.1.3",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.0",
		"rollup": "^1.25.0",
		"rollup-plugin-babel": "^4.0.2",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-replace": "^2.2.0",
		"rollup-plugin-svelte": "^5.0.1",
		"rollup-plugin-terser": "^4.0.4",
		"rollup-plugin-typescript2": "^0.24.3",
		"sapper": "^0.27.9",
		"svelte": "^3.13.0-alpha.0",
		"tailwindcss": "^1.1.2",
		"tslib": "^1.10.0",
		"type-graphql": "^0.17.5",
		"typescript": "^3.6.4",
		"utf-8-validate": "^5.0.2"
	},
	"resolutions": {
		"graphql": "^14.2.1"
	}
}
