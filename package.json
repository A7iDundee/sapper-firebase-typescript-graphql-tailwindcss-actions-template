{
	"name": "sapper-firebase-typescript-graphql-tailwindcss-actions-template",
	"description": "A template that includes Svelte with Sapper, Firebase functions and hosting, TypeScript and TypeGraphQL, Tailwind CSS, ESLint and EditorConfig, and automatic building and deployment with GitHub Actions",
	"version": "2019.10.31",
	"scripts": {
		"firebase:deploy": "node ./node_modules/.bin/firebase deploy",
		"firebase:start": "./node_modules/.bin/firebase serve",
		"sapper:dev": "node ./node_modules/sapper/dist/cli.js dev",
		"sapper:clean": "rimraf - functions/__sapper__/build",
		"sapper:setup": "mkdirp functions/__sapper__/build",
		"sapper:build": "node ./node_modules/sapper/dist/cli.js build",
		"sapper:copy": "ncp ./__sapper__/build ./functions/__sapper__/build",
		"sapper:prod": "run-s sapper:clean sapper:setup sapper:build sapper:copy",
		"sapper:export": "node ./node_modules/sapper/dist/cli.js export",
		"tailwind:dev": "node ./node_modules/postcss-cli/bin/postcss --verbose --env development src/tailwind.pcss --output static/main.css --watch",
		"tailwind:prod": "node ./node_modules/postcss-cli/bin/postcss --verbose --env production src/tailwind.pcss --output static/main.css",
		"dev": "run-p sapper:dev tailwind:dev",
		"prod": "run-p sapper:prod tailwind:prod",
		"deploy": "run-s prod firebase:deploy"
	},
	"dependencies": {
		"@types/node-fetch": "^2.5.2",
		"compression": "^1.7.1",
		"express": "^4.17.1",
		"node-fetch": "^2.6.0",
		"sirv": "^0.4.0"
	},
	"devDependencies": {
		"@babel/core": "^7.6.4",
		"@babel/plugin-syntax-dynamic-import": "^7.0.0",
		"@babel/plugin-transform-runtime": "^7.6.2",
		"@babel/preset-env": "^7.6.3",
		"@babel/runtime": "^7.6.3",
		"@fullhuman/postcss-purgecss": "^1.3.0",
		"@pyoner/svelte-ts-preprocess": "^1.2.1",
		"@pyoner/svelte-types": "^3.4.4-2",
		"@types/express": "^4.17.1",
		"@types/graphql": "^14.5.0",
		"@typescript-eslint/eslint-plugin": "^2.6.0",
		"@typescript-eslint/parser": "^2.6.0",
		"apollo-server-express": "^2.9.7",
		"bufferutil": "^4.0.1",
		"connect": "^3.7.0",
		"cssnano": "^4.1.10",
		"eslint": "^6.6.0",
		"eslint-plugin-svelte3": "^2.7.3",
		"firebase-tools": "^7.6.2",
		"graphql": "^14.2.1",
		"mkdirp": "^0.5.1",
		"ncp": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^6.1.3",
		"postcss-preset-env": "^6.7.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.0",
		"rollup": "^1.26.2",
		"rollup-plugin-babel": "^4.0.2",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-replace": "^2.2.0",
		"rollup-plugin-svelte": "^5.0.1",
		"rollup-plugin-terser": "^4.0.4",
		"rollup-plugin-typescript2": "^0.24.3",
		"sapper": "^0.27.9",
		"svelte": "^3.13.0-alpha.2",
		"tailwindcss": "^1.1.3",
		"tslib": "^1.10.0",
		"type-graphql": "^0.17.5",
		"typescript": "^3.6.4",
		"utf-8-validate": "^5.0.2"
	},
	"resolutions": {
		"graphql": "^14.2.1"
	}
}
